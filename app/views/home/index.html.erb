<div class="container">
  <section class="row">
    <div class="col-md-offset-4 col-md-4">
      <img class="img-responsive shark" src="http://www.decalsmania.com/FitxersWeb/104804/WHITE_SHARK_FOTOLLISTAT_portada.png">
    </div>
  </section>
  <section class="row offer">
    <div class="col-md-offset-1 col-md-4">
      <h2>Shark File: What we have to offer</h2>
      <ul>
        <li>Synchronize team projects with ease</li>
        <li>Instantaneous file sharing and group communication</li>
        <li>Text and video chat systems to keep communication simple</li>
        <li>Assignment allocation services</li>
      </ul>
    </div>
    <div class="col-md-offset-1 col-md-4" >
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <img src="http://cdn.images.express.co.uk/img/dynamic/78/590x/Great-White-shark-Evans-Head-595103.jpg" alt="Chania">
          </div>

          <div class="item">
            <img src="http://www.sharksavers.org/files/9814/5031/2990/M-OMalley-Great-White-0230.jpg" alt="Chania">
          </div>

          <div class="item">
            <img src="https://www.daysoftheyear.com/wp-content/images/shark-awareness-day1-e1434363530655-808x382.jpg" alt="Flower">
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </section>
</div>

