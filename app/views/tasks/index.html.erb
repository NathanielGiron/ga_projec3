<h1>Tasks</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<table>
  <tr>
    <th>Task</th>
    <th>User</th>		
    <th>Project</th>
    <th>Status</th>
    <th>Modify</th>
  </tr>
<% @tasks.sort_by{ |t| [t.project.title, t.status, t.title] }.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.user.email %></td>		
    <td><%= task.project.title %></td>
    <td><%= task.status %></td>
    <td>
    	<%= link_to 'Edit', edit_task_path(task) %>
    	<%= link_to 'Delete', task, method: :delete %>
    </td>
  </tr>
  <% end %>
</table>
<br><br>
<hr>
<%= render 'tasks/create' %>